! --[ URxvt ]-----------------------------------------------
! comment out to leave it to colorscheme
! colors
URxvt.cursorColor: #83C048
URxvt*background: [70]#000000
URxvt.foreground: #cccccc
URxvt.highlightColor: #444444
URxvt.underlineColor: #999999
URxvt.colorUL: #4682B4
URxvt.depth: 32



! scrollback
URxvt.scrollBar: false
URxvt.saveLines: 100000
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer: true

!font
URxvt.font: xft:monospace:size=10

! needed to fix font spacing
URxvt.letterSpace: -1
URxvt.lineSpace: 2
URxvt.tripleclickwords: true
URxvt.insecure: true

#extensions
URxvt.perl-ext-common: selection-to-clipboard

#rofi
rofi.color-enabled:	true
rofi.color-window:	#000, #000, #000
rofi.color-normal:	#111, #819396, #222, #008ed4, #ffffff
rofi.color-active:	#002b37, #008ed4, #003643, #008ed4, #66c6ff
rofi.color-urgent:	#002b37, #da4281, #003643, #008ed4, #890661

rofi.fake-transparency:	true
rofi.lines:		3
rofi.bw:		0
rofi.opacity:		"10"
rofi.hide-scrollbar:	true
rofi.width:		30
